<?xml version="1.0" encoding="utf-8"?><!-- UI to control video playback. See the class's javadoc for more info. -->
<com.monteroc.googlevr.VideoUiView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_ui_view"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/play_pause_toggle"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/pause_button" />

    <SeekBar
        android:id="@+id/seek_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:gravity="center|end"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

</com.monteroc.googlevr.VideoUiView>
